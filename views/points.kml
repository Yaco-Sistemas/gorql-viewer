<?xml version="1.0" encoding="utf-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
    <Document>
        <name>{{name}}</name>
        <Style id="mark">
            <IconStyle>
                <Icon>
                    <href>{{host}}/javascripts/img/marker.png</href>
                </Icon>
            </IconStyle>
        </Style>
        {{each(idx, place) places}}
        <Placemark>
            <name>{{place.name}}</name>
            <description>{{place.description}}</description>
            <styleUrl>#mark</styleUrl>
            <Point>
                <coordinates>-{{place.lon}},{{place.lat}}</coordinates>
            </Point>
        </Placemark>
        {{/each}}
    </Document>
</kml>